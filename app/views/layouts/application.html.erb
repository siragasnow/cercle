<!DOCTYPE html>
<html>
  <head>
    <title>Cercle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <header>
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
                <%= link_to image_tag('/assets/logo.jpg', width:"200px", height:"116px"), admin_homes_top_path %>
            </div>
            <div class="collapse navbar-collapse">
              <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                </div>
                <button type="submit" class="btn btn-default">検索</button>
              </form>
            </div>
            <nav class="navbar navbar-right">
              <div class="container-fluid">
                <div class="collapse navbar-collapse">
                  <ul class="nav nav-tabs">
                    <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
                  </ul>
                </div>
              </div>
            </nav>
          </div>
        </div>
      </header>
    <% elsif school_signed_in? %>
      <header>
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
                <%= link_to image_tag('/assets/logo.jpg', width:"200px", height:"116px"), root_path %>
            </div>
            <div class="collapse navbar-collapse">
              <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                </div>
                <button type="submit" class="btn btn-default">検索</button>
              </form>
            </div>
            <nav class="navbar navbar-right">
              <div class="container-fluid">
                <div class="collapse navbar-collapse">
                  <ul class="nav nav-tabs">
                    <li><%= link_to "献立一覧", public_menus_path %></li>
                    <li><%= link_to "マイページ", "#" %></li>
                    <li><%= link_to "投稿する", new_public_menu_path %></li>
                    <li><%= link_to "ログアウト", destroy_school_session_path, method: :delete %></li>
                  </ul>
                </div>
              </div>
            </nav>
          </div>
        </div>
      </header>
    <% else %>
      <header>
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
              <%= link_to image_tag('/assets/logo.jpg', width:"200px", height:"116px"), root_path %>
            </div>
            <div class="collapse navbar-collapse">
              <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                </div>
                <button type="submit" class="btn btn-default">検索</button>
              </form>
            </div>
            <nav class="navbar navbar-right">
              <div class="container-fluid">
                <div class="collapse navbar-collapse">
                  <ul class="nav nav-tabs">
                    <li><%= link_to "登録", new_school_registration_path %></li>
                    <li><%= link_to "ログイン", new_school_session_path %></li>
                  </ul>
                </div>
              </div>
            </nav>
          </div>
        </div>
      </header>
    <% end %>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <footer>
      <ul class="footer-menu">
        <li><%= link_to 'home', root_path %>｜</li>
        <li><%= link_to 'about', "#" %>｜</li>
        <li><%= link_to 'service', "#" %>｜</li>
        <li><%= link_to 'Contact Us', "#" %></li>
      </ul>
      <p>Copyright © 2020 Cercle.</p>
    </footer>
  </body>
</html>
